
<div class="bg-light rounded-top shadow m-2">
    <div class="d-flex flex-row justify-content-start">
        <div class="pt-4">
            <button type="button" class="btn btn-light position-relative">
                Projects
                <span class="position-absolute top-0 start-100 translate-middle p-2 m-1 bg-secondary text-white border border-light rounded-pill">
                    90
                </span>
            </button>
            
        </div>
        <div class="m-4 p-1 border rounded-circle">
        <a class="text-decoration-none" href="<%= new_project_path %>">
            +
        </a>
        </div>
    </div>
    <div class="mt-2">
        <div class="row">
            <%Phase.all.each do |phase|%>
                <div class="col bg-light m-2 shadow-sm">
                    <div class="mt-4 ml-4 pl-4">
                        <button type="button" class="btn btn-light position-relative pl-3 ml-3">
                        <%=phase.title%>
                        <span class="position-absolute top-0 start-100 translate-middle p-2 m-1 bg-secondary text-white border border-light rounded-pill">
                            0
                        </span>
                        </button>
                    </div>
                    <div class="m-1 p-1">
                            <%@projects.each do |project|%>
                                <%if project.status == phase.title%>
                                    
                                    <div  class="shadow col p-3 bg-white m-3 rounded">
                                        <div class="d-flex justify-content-end">
                                            <span><i class="bi bi-list"></i></span>
                                        </div>
                                    
                                        <div>
                                    
                                            <a class="text-decoration-none" href="<%= project_url(:id=>project.id) %>">
                                            <h6 class="text-dark"><%=project.title%></h6>
                                            <p class="text-secondary"><%=project.description%></p>
                                            </a>
                                        </div>
                                        <div class="mt-3 d-flex justify-content-end">
                                            <span class="text-success"><i class="bi bi-person-fill"></i></span>
                                            <span class="text-success"><i class="bi bi-people-fill"></i></span>
                                        </div>
                                        <div class="progress" style="height: 15px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                        </div>
                                        <div class="d-flex justify-content-around mt-2">
                                            <span>0</span>
                                            <span>0</span>
                                            <span>0</span>
                                            <span>0</span>
                                        </div>
                                        <div class="d-flex justify-content-around ">
                                            <span><i class="bi bi-list-ul"></i></span>
                                            <span class="text-primary"><i class="bi bi-check-circle"></i></span>
                                            <span class="text-warning"><i class="bi bi-clock-history"></i></span>
                                            <span class="text-danger"><i class="bi bi-clock"></i></span>
                                        </div>
                                    </div>
                                <%end%>
                            <%end%>
                    </div>
                </div>
           <%end%>
        </div>
    </div>
</div>




